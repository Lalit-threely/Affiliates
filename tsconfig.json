{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitReturns": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "sourceMap": true,
    "inlineSources": true
  },
  "exclude": ["node_modules", "dist"]
}